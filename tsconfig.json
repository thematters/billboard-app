{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@asset/*": ["./app/asset/*"],
      "@abi/*": ["./app/common/abi/*"],
      "@constant": ["./app/common/constant/index.ts"],
      "@component/*": ["./app/component/*"],
      "@svg/*": ["./app/component/Svg/*"],
      "@hook/*": ["./app/hook/*"],
      "@type": ["./app/type/index.ts"],
      "@util/*": ["./app/util/*"]
    },
    "noEmit": true
  }
}
